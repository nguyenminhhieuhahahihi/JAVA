<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/title_add_to_music_list"
            android:textSize="@dimen/dialog_title_text_size" />

        <Button
            android:id="@+id/btnNewMusicList"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_button_height"
            android:layout_gravity="center|start"
            android:background="@drawable/bg_button_submit"

            android:drawablePadding="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/button_text_new_music_list"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_height="240dp" />

    <Button
        android:id="@+id/btnOK"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_dialog_button"
        android:text="@string/message_dialog_positive_text"
        android:textAllCaps="false"
        android:textColor="@color/colorPositiveButtonText" />

</LinearLayout>